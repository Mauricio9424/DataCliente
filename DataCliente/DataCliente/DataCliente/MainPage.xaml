<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataCliente"
             x:Class="DataCliente.MainPage">
    <StackLayout Padding="20"
                 VerticalOptions="CenterAndExpand">
        <Label Text="DATA CLIENTE" 
           VerticalOptions="Center" 
           HorizontalOptions="Center"
           FontAttributes="Bold"
           FontSize="Large"
           Font="45"/>
        <Entry Placeholder="Usuario"></Entry>
        <Entry Placeholder="Uontraseña"
               IsPassword="True"></Entry>
        <Button Text="Ingresar"></Button>
        <Button Text="Registrarme"></Button>
    </StackLayout>

	

</ContentPage>